<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBraon"
    tools:context="com.interfacemockup.kalendar.Katihizis">
    <ImageView
        android:id="@+id/id_backBtn_katihizis"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:background="@drawable/back_btn"
        android:backgroundTint="@color/colorBanana"
        android:src="@drawable/ic_arrow_back_48px"
        android:onClick="backKatihizis"/>

    <TextView
        android:id="@+id/id_pitanje_textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textview_pitanje"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/colorBanana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_backBtn_katihizis"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_odgovor_textView"
        android:layout_width="381dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/colorOrange"
        android:textAlignment="textStart"
        android:textStyle="italic"
        android:textColor="@color/colorSiviText"
        android:text="@string/textview_odgovor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_pitanje_textView" />

    <ImageView
        android:id="@+id/id_nazad_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_btn_big"
        android:backgroundTint="@color/colorBanana"
        android:onClick="left_klik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_odgovor_textView"
        app:srcCompat="@drawable/ic_chevron_left_48px" />

    <ImageView
        android:id="@+id/id_napred_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/back_btn_big"
        android:backgroundTint="@color/colorBanana"
        android:onClick="right_klik_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_odgovor_textView"
        app:srcCompat="@drawable/ic_chevron_right_48px" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adKatihizis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-7920431183682527/3087196483"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>
